  "dependencies": {
    "bagit-fs": "^1.1.1",
    "bootstrap": "^3.3.7",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "json-editor": "^0.7.28",
    "opn": "^5.1.0",
    "rimraf": "^2.6.1",
    "slugify": "^1.2.1",
